<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#070707"
    tools:context=".CreateTask">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="104dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="121dp"
        android:layout_height="36dp"
        android:text="Add Task"
        android:textColor="#FDFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <EditText
        android:id="@+id/editTextname"
        android:layout_width="365sp"
        android:layout_height="70sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FBFAE7"
        android:ems="10"
        android:background="@drawable/background_task"
        android:hint="Task Name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#090909"
        android:textColorHint="#595757"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <EditText
        android:id="@+id/editTextdescription"
        android:layout_width="365sp"
        android:layout_height="70sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_task"
        android:backgroundTint="#FBFAE7"
        android:ems="10"
        android:paddingLeft="10dp"
        android:hint="Task Description"
        android:inputType="text"
        android:textColor="#090909"
        android:textColorHint="#595757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextname" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="365sp"
        android:layout_height="70sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_task"
        android:backgroundTint="#FBFAE7"
        android:ems="10"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:hint="Task Status"
        android:textColor="#090909"
        android:textColorHint="#595757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextdescription" />

    <TextView
        android:id="@+id/editTextDate"
        android:layout_width="365sp"
        android:layout_height="70sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_task"
        android:backgroundTint="#FBFAE7"
        android:ems="10"
        android:hint="Deadline Date"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:inputType="date"
        android:textColor="#090909"
        android:textColorHint="#595757"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <TextView
        android:id="@+id/editTextTime"
        android:layout_width="365sp"
        android:layout_height="70sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_task"
        android:backgroundTint="#FBFAE7"
        android:textSize="18dp"
        android:inputType="time"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:hint="Deadline Time"
        android:textColor="#090909"
        android:textColorHint="#595757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <Button
        android:id="@+id/addbutton"
        android:layout_width="239dp"
        android:layout_height="71dp"
        android:backgroundTint="#4CAF50"
        android:text="Add Task"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTime" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="24dp"
        android:layout_height="64dp"
        android:layout_marginBottom="56dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
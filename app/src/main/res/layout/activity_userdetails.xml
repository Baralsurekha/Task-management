<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Top Bar -->
        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:15"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/networkStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5G"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Back"
            android:src="@drawable/arrow_left"
            app:layout_constraintTop_toBottomOf="@+id/timeText"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Profile Image & Name -->

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Profile Photo"
            android:src="@drawable/pic_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Smith"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/profileImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />






        <TextView
            android:id="@+id/tvEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Your Profile"
            android:textColor="#FFD700"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />


        <!-- Email -->
        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/tvEditProfile"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cihe232@cihe.com"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="@id/labelEmail"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/labelEmail" />

        <!-- Address -->
        <TextView
            android:id="@+id/labelAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/labelEmail"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North Sydney 123"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/labelAddress"
            app:layout_constraintStart_toEndOf="@id/labelAddress" />

        <!-- First Name -->
        <TextView
            android:id="@+id/labelFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/labelAddress"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/labelFirstName"
            app:layout_constraintStart_toEndOf="@id/labelFirstName" />

        <!-- Last Name -->
        <TextView
            android:id="@+id/labelLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/labelFirstName"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smith"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/labelLastName"
            app:layout_constraintStart_toEndOf="@id/labelLastName" />


        <!-- Button -->
        <Button
            android:id="@+id/btnUpdateDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:backgroundTint="#32CD32"
            android:padding="14dp"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelLastName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
